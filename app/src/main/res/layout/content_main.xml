<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="5dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewSearch"
        android:text="@string/text_search"
        android:textSize="5pt"
        android:textColor="@color/colorSecondary"
        android:layout_marginBottom="8dp"
        />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        cardView:cardElevation="6sp"
        android:padding="5dp"
        >

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical"
           >

           <SearchView
               android:layout_width="match_parent"
               android:layout_height="60dp"
               android:background="@drawable/box"
               android:queryHint="What are you looking for?"
               android:layout_marginBottom="20dp"
               android:iconifiedByDefault="false"
               />

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="OR"
               android:layout_marginBottom="20dp"
               android:layout_gravity="center_horizontal" />

           <Button
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Browse Categories"
               android:layout_gravity="center_horizontal"
               android:layout_marginBottom="10dp"
               android:textColor="#ffffff"
               android:background="@drawable/button_selector"
               android:paddingTop="8dp"
               android:paddingBottom="8dp"
               android:paddingLeft="15dp"
               android:paddingRight="15dp"
               />

       </LinearLayout>

    </android.support.v7.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="News And Updates"
        android:textColor="@color/colorSecondary"
        android:textSize="6pt"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:layout_marginBottom="15dp"
        />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Check your tires pressure?"
                android:textColor="@color/colorSecondary"
                android:textSize="7pt"
                android:id="@+id/textViewNewsTitle2"
                android:layout_marginBottom="5dp"
                />

            <TextView
                android:id="@+id/textViewNewsBody2"
                android:layout_below="@+id/textViewNewsTitle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6h ago"
                android:textSize="4pt"
                android:textColor="@color/colorAccent"
                android:layout_below="@+id/textViewNewsBody2"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Check your tires pressure?"
                android:textColor="@color/colorSecondary"
                android:textSize="7pt"
                android:id="@+id/textViewNewsTitle1"
                android:layout_marginBottom="5dp"
                />

            <TextView
                android:id="@+id/textViewNewsBody1"
                android:layout_below="@+id/textViewNewsTitle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6h ago"
                android:textSize="4pt"
                android:textColor="@color/colorAccent"
                android:layout_below="@+id/textViewNewsBody1"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>

